<div class="crypto-header">
  <div class="card text-white mx-auto inside-crypto-header" style="width: 25rem;">
    <div class="card-body text-center">
      <h1>Crypto Currency</h1>
    </div>
  </div>
</div>

<div class="crypto-table">
  <table class="table table-striped table-bordered table-light">
    <thead class="crypto-table-header text-white">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Current Price</th>
        <th scope="col">Rank</th>
        <th scope="col">1 HR %</th>
        <th scope="col">24 HR %</th>
        <th scope="col">7 Day %</th>
        <th scope="col">Current Value</th>
        <th scope="col">Total Paid</th>
        <th scope="col">Profit/Loss</th>
        <th scope="col">Cost Paid Per</th>
        <th scope="col">Amount Owned</th>
      </tr>
    </thead>
    <tbody>
      <% @cryptos.each do |crypto| %>
        <tr>
        <% if crypto.user_id == current_user.id %>
          <% @data.each do |coin|  %>
            <% if crypto.symbol.upcase == coin["symbol"] %>
              <td> <%= link_to coin["name"], crypto %> </td>
              <td> $<%= coin["quote"]["USD"]["price"].to_d.round(4) %> </td>
              <td> <%= coin["cmc_rank"] %> </td>
              <td> <%= coin["quote"]["USD"]["percent_change_1h"] %>% </td>
              <td> <%= coin["quote"]["USD"]["percent_change_24h"] %>% </td>
              <td> <%= coin["quote"]["USD"]["percent_change_7d"] %>% </td>
              <td> $<%= (coin["quote"]["USD"]["price"].to_d * crypto.amount_owned).round(4) %> </td>
              <td> $<%= crypto.cost_per * crypto.amount_owned %> </td>
              <td> $<%= ((coin["quote"]["USD"]["price"].to_d * crypto.amount_owned) - (crypto.cost_per * crypto.amount_owned)).round(4) %> </td>
              <td> <%= number_to_currency(crypto.cost_per) %> </td>
              <td> <%= number_to_currency(crypto.amount_owned) %> </td>
            <% end %>
          <% end %>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container-fluid">
  <%= link_to 'New Crypto', new_crypto_path, class: "btn btn-primary" %> 
</div>
