<div class="search-card">
  <div class="card mx-auto border-dark mb-3" style="width: 40rem;">
    <div class="card-header bg-primary text-white">
      <h3 class="text-center">Crypto Currency Search</h3>
    </div>
    <div class="card-body form-inline text-center">
      <%= form_tag search_path, method: :post do %>
        <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol', size: 50, class: 'form-control w-50' %>
        <!-- This helps the flash msg not to appear when search is empty -->
        <%= hidden_field_tag :searching, true %>
        <%= submit_tag 'Search Stock Quote', class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
<br>

<% if @symbol && @symbol != "" %>
  <div class="search-card">
    <div class="card mx-auto border-dark mb-3" style="width: 45rem;">
      <div class="card-header bg-primary text-white text-center">
        <h4><%= @coin_name %></h4>
      </div>
      <div class="card-body text-center">
        <div class="row">
          <div class="col-sm-4">
            <strong>Symbol:</strong> <br> <%= @coin_symbol %>
          </div>
          <div class="col-sm-4">
            <strong>Rank:</strong> <br> <%= @coin_rank %>
          </div>
          <div class="col-sm-4">
            <strong>Current Price:</strong> <br> $<%= @coin_price %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-4">
            <strong>Change in last hour:</strong> <br> <%= @coin_change_1h %>%
          </div>
          <div class="col-sm-4">
            <strong>Change in last 24 hours:</strong> <br> <%= @coin_change_24h %>%
          </div>
          <div class="col-sm-4">
            <strong>Change in last 7 days:</strong> <br> <%= @coin_change_7d %>%
          </div>
        </div>
      </div>        
    </div>
  </div>
<% end %>
